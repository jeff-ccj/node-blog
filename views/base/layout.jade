doctype html
html
  head
    meta(charset='UTF-8')
    title= title
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/summernote/summernote.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-default.navbar-fixed-top
      div.container
        div.navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Blog
        div#navbar.navbar-collapse.collapse
          -
            var navs = [
              {
                title: '首页'
                , href: '/'
              }
              //, {
                //title: '用户'
                //, href: '/user'
              //}
            ]
          ul.nav.navbar-nav
            - each nav in navs
              li(class= (url == nav.href) ? 'active' : '')
                a(href=nav.href)= nav.title
          ul.nav.navbar-nav.navbar-right
            -if(!user)
              li
                a(href='/login') 登入
              li
                a(href='/reg') 注册
            -else
              li
                a#sendBlog(href='javascript:;') 发表微博
              li
                a(href='/user/' + user.name) #{user.name}
              li
                a#logout(href='/logout') 登出

    .container
      block content

    hr
    footer
      p
        //a(href='http://ccj.name') Jeff
        //input(id='inputFile', type='file')
        jeff
        | 2013
    block footer
      script(type='text/javascript', src='/javascripts/jquery.js')
      script(type='text/javascript', src='/javascripts/bootstrap.js')
